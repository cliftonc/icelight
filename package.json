{
  "name": "icelight",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Cloudflare Data Platform library for streaming JSON to Iceberg tables",
  "scripts": {
    "build": "pnpm -r build",
    "dev:ingest": "pnpm --filter event-ingest dev",
    "dev:query": "pnpm --filter query-api dev",
    "dev:ui": "pnpm --filter query-api dev:ui",
    "dev:duckdb": "pnpm --filter duckdb-api dev",
    "build:ui": "pnpm --filter query-api build:ui",
    "build:container": "pnpm --filter icelight-duckdb-container build",
    "deploy:ingest": "pnpm --filter event-ingest run deploy",
    "deploy:query": "pnpm --filter query-api run deploy",
    "deploy:duckdb": "pnpm --filter duckdb-api run deploy",
    "deploy:all": "pnpm -r run deploy",
    "launch": "tsx scripts/setup/index.ts",
    "launch:legacy": "tsx scripts/setup-pipeline.ts",
    "teardown": "tsx scripts/teardown/index.ts",
    "teardown:legacy": "tsx scripts/teardown.ts",
    "generate-events": "tsx scripts/generate-events.ts",
    "typecheck": "pnpm -r typecheck && tsc --project scripts/tsconfig.json",
    "typecheck:scripts": "tsc --project scripts/tsconfig.json",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.0.0",
    "@types/figlet": "^1.7.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "boxen": "^8.0.0",
    "chalk": "^5.3.0",
    "figlet": "^1.8.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "wrangler": "^4.59.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
